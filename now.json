{
  "private": true,
  "version": 2,
  "builds": [
    {
      "src": "app/package.json",
      "use": "@now/next"
    },
    {
      "src": "api/index.js",
      "use": "@now/node"
    }
  ],
  "routes": [
    { "src": "/graphql", "dest": "/api/index.js" },
    {
      "src": "/(.*)",
      "dest": "/app/$1",
      "headers": {
        "x-request-path": "$1"
      }
    }
  ]
}
